@*@model ProfileModel*@
@model IEnumerable<Message>
@{
    ViewData["Title"] = "Chat room";
    var userName = User.Identity.Name;


    var distinctUsername = Model.Select(strings => strings.UserName).Distinct().ToArray();
    var distincId = Model.Select(strings => strings.UserId).Distinct().ToArray();

    var dict = new Dictionary<string, string>();
    for (int i = 0; i < distinctUsername.Length; i++)
    {
        dict.Add(distincId[i], distinctUsername[i]);
    }

}
<div class="chatroom">
    <div class="chat-side">
        <h3>Visitors</h3>
        @foreach (var item in dict)
            {
                
                @if (item.Value != User.Identity.Name)
                {
                    <div class="friend" id="@item.Key">
                        <label class="col">@item.Value</label>
                    </div>
                    <hr />
                }
                else
                {
                    <div class="user" id="@item.Key">
                        <a class="link-danger" asp-area="" asp-controller="Profile" asp-action="Index"><label class="col">@item.Value</label></a>
                    </div>
                    <hr />

                }
            }
    </div>
    <div class="chat-body" id="scroller">
        <h3>Public Chat room</h3>
        <hr />
        <div >
            <div id="chat">
                @if (Model != null)
                {
                    @foreach (var message in Model.OrderBy(m => m.TimeStamp))
                    {
                        string containerClass, timePosition, textAlign, contcolor, offset;
                        if (userName == message.UserName)
                        {
                            containerClass = "container darker";
                            timePosition = "time-right text-light";
                            textAlign = "text-right text-white";
                            contcolor = "bg-dark";
                            offset = "col-md-6 offset-md-6";
                        }
                        else
                        {
                            containerClass = "container";
                            timePosition = "time-left";
                            textAlign = "text-left";
                            contcolor = "bg-light";
                            offset = "";
                        }

                        <div class="row">
                            <div class="@offset">
                                <div class="@containerClass @contcolor">
                                    <p class="sender @textAlign">@message.UserName</p>
                                    <p class="@textAlign">@message.Text</p>
                                    <span class="@timePosition">@message.TimeStamp.ToString()</span>
                                </div>
                            </div>
                        </div>

                    }
                }
            </div>
        </div>
    </div>
    <div class="chat-input">
        <div >
            <div >
                <form asp-action="Create"
                      data-ajax-begin="clearInputField" data-ajax-complete=""
                      data-ajax-failure="alert('Fail')" data-ajax-success="sendMessage"
                      data-ajax="true" data-ajax-method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-11">
                            <input name="Text" class="form-control" id="messageText" />
                        </div>
                        <div class="form-group col-md-1">
                            <input type="submit" value="Send" id="submitButton" class="btn btn-dark" />
                        </div>
                    </div>
                    <input type="hidden" value="@User.Identity.Name" name="username" />
                </form>
            </div>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <script>
        const userName = "@ViewBag.CurrentUserName";
    </script>
}


