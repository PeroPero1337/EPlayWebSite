@{
    ViewData["Title"] = "Login Page";
}
<div class="signup-container">
    <h1 class="text-center">Sign In</h1>
    @using (Html.BeginForm("Index", "SignUp", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            @Html.Label("Username", "Username", new { @class = "control-label" })
            @Html.TextBox("Username", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Password", "Password", new { @class = "control-label" })
            @Html.Password("Password", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input class="custom-checkbox" id="stay" type="checkbox" />
            <label for="stay">Stay signed in</label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-dark btn-block">Login</button>
        </div>


    }
    <a href="" class="page-link">Can't Sign int?</a>
    <a href="" class="page-link">Create an account</a>
</div>