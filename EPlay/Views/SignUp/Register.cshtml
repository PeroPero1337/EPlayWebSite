@{
    ViewData["Title"] = "Registration Page";
}
<div class="signup-container">
    <h1>Sign Up</h1>
    @using (Html.BeginForm("Register", "SignUp", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            @Html.Label("FirstName", "First name", new { @class = "control-label" })
            @Html.TextBox("FirstName", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("LastName", "Last name", new { @class = "control-label" })
            @Html.TextBox("LastName", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Country", "Last name", new { @class = "control-label" })
            @Html.TextBox("Country", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Email", "Email address", new { @class = "control-label" })
            @Html.TextBox("Email", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Password", "Password", new { @class = "control-label" })
            @Html.TextBox("Password", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("PassCheck", "Re-enter Password", new { @class = "control-label" })
            @Html.TextBox("PassCheck", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger btn-block">Register</button>
        </div>
    }
</div>